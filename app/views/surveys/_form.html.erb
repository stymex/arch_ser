	<ul>
		<% @survey.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="field">
	<p><%= f.label :name %> <%= f.text_field :name %></p>
</div>
<hr/>

